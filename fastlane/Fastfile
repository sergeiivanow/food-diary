# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

PROJECT_DIRECTORY = File.expand_path("..", Dir.pwd)

default_platform(:android)

platform :android do
  desc "Android: Build a new version"
  lane :build do
    gradle(
      task: "assemble",
      build_type: "Release",
      project_dir: "android"
    )
  end
  
  lane :upload_build_to_diawi do
    diawi(
      token: ENV["DIAWI_TOKEN"],
      file: File.join(PROJECT_DIRECTORY, "android/app/build/outputs/apk/release/app-release.apk"),
    )
    result_url = lane_context[SharedValues::UPLOADED_FILE_LINK_TO_DIAWI]
    sh("curl -X POST 'https://api.telegram.org/bot#{ENV["TELEGRAM_TOKEN"]}/sendMessage' -d 'chat_id=#{ENV["CHAT_ID"]}&text=ðŸ”¥ New version\nInstallation link .apk \n#{result_url}'")
  end
end
